# Diary Application Environment Variables
# Copy this file to .env and customize as needed

# ============================================
# Backend Configuration
# ============================================

# User credentials (email:bcrypt_hash)
# Default: test@test.com with password "test"
GB_USERS=test@test.com:JDJhJDEwJC9sVWJpTlBYVlZvcU9ZNUxIZmhqYi4vUnRuVkJNaEw4MTQ2VUdFSXRDeE9Ib0ZoVkRLR3pl

# Database path (inside container)
GB_DBPATH=/data/diary.db

# Assets path (inside container)
GB_ASSETPATH=/data/diary-assets

# CORS allowed origins (comma-separated)
# For production, set to your actual domain
GB_ALLOWEDORIGINS=http://localhost,http://localhost:80,http://localhost:8080

# JWT secret (leave empty for auto-generation)
GB_JWTSECRET=

# Session secret for cookie-based sessions (REQUIRED - minimum 32 characters)
# Generate a secure random string for production
GB_SESSION_SECRET=

# Cookie security settings
# Set to false for local development without HTTPS (default: true)
GB_COOKIE_SECURE=false

# JWT issuer
GB_ISSUER=diary

# Backend port (inside container)
GB_PORT=8080

# File upload limits
GB_MAXPERFILESIZEMB=200
GB_MAXBATCHFILES=100
GB_MAXBATCHTOTALSIZEMB=1000

# ============================================
# Volume Configuration
# ============================================

# External volume path for database and assets
# This directory will be created on the host machine
DIARY_DATA_PATH=./diary-data

# ============================================
# Frontend Configuration
# ============================================

# API URL for frontend (default: /v1 for relative path behind nginx proxy)
# Use full URL if accessing backend directly: http://backend:8080/v1
API_URL=/v1

# ============================================
# Nginx Configuration
# ============================================

# Nginx HTTP port (exposed on host)
NGINX_HTTP_PORT=80

# Nginx HTTPS port (exposed on host)
NGINX_HTTPS_PORT=443

